<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <Button
        android:text="คำนวณวันตกไข่"
        android:textStyle="bold"
        style="@style/btn_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:textSize="20dp"
        android:onClick="onSave"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คำนวณวันตกไข่"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ดูปฏิทินวันตกไข่"
        android:textStyle="bold"
        style="@style/btn_color"
        android:textSize="20dp"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="กรุณาเลือกวันสิ้นสุด"
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:layout_above="@+id/editText2"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginBottom="22dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/calendaricon"
        android:id="@+id/imageView12"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="กรุณาเลือกวันเริ่มต้น"
        android:layout_marginRight="15dp"
        android:layout_above="@+id/textView7"
        android:layout_toEndOf="@+id/imageView12"
        android:layout_marginBottom="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="กรุณาเลือกวันเริ่มต้น"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="17dp"
        android:layout_alignTop="@+id/imageView12"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:background="#DDDDDD"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/calendaricon"
            android:id="@+id/calendaricon"
            android:layout_marginEnd="305dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/drugicon"
            android:id="@+id/drugicon"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/doctoricon"
            android:id="@+id/doctoricon"
            android:layout_marginLeft="300dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="แจ้งเตือนยา"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_marginEnd="8dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/drugicon" />

        <TextView
            android:text="คำนวณวันตกไข่"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="ค้นคว้าบทความ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView9"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="นัดคุณหมอ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/faqicon"
            android:id="@+id/faqicon"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView10" />
    </RelativeLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="กรุณาเลือกวันสิ้นสุด"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="75dp"
        android:layout_above="@+id/button3"
        android:layout_alignEnd="@+id/editText" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/calendaricon"
        android:id="@+id/imageView11"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/button3"
        android:layout_alignParentStart="true" />


</RelativeLayout>